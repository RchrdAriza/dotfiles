{
  "layer": "top",
  "position": "top",
  "height": 20,
  "spacing": 0,
  "margin-top": 5,
  "margin-left": 10,
  "margin-right": 10,

  "modules-left": ["custom/launcher", "hyprland/workspaces", "mpris"],

  "modules-center": ["clock", "custom/cava"],

  "modules-right": [
    "memory",
    "pulseaudio",
    "pulseaudio#microphone",
    "custom/caps-lock",
    "backlight",
    "battery",
    "custom/notification",
    "tray",
    "custom/power"
  ],

  "custom/launcher": {
    "format": "Û∞£á",
    "on-click": "rofi -show drun -show-icons",
    "tooltip-format": "Application launcher"
  },

  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "1": "ÔÑ†",
      "2": "Û∞àπ",
      "3": "ÔÜº",
      "4": "Û∞ä¥",
      "5": "ÔÄæ",
      "6": "Û∞Ç∫",
      "urgent": "ÔÅ™",
      "focused": "ÔÜí",
      "default": "ÔÑë"
    },
    "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": [],
      "6": []
    }
  },
  "mpris": {
    "format": "{artist} - {title}",
    "tooltip-format": "{album}",
    "player-icons": {
      "default": "‚ñ∂",
      "mpv": "üéµ"
    },
    "format-paused": "ÔÅå {artist} - {title}",
    "on-click": "playerctl play-pause",
    "on-scroll-up": "playerctl previous",
    "on-scroll-down": "playerctl next",
    "max-length": 35,
    "ignore-players": ["brave-browser"]
  },

  "clock": {
    "format": "ÔÄó  {:%H:%M}",
    "tooltip-format": "ÔÅ≥  {:%A %d %B %Y}",
    "on-click-right": "gnome-calendar"
  },
  "custom/cava": {
    "format": "{text}",
    "hide-empty-text": true,
    "exec": "~/.config/waybar/scripts/cava-module.py",
    "return-type": "json"
  },

  "memory": {
    "format": "Û∞çõ  {used:0.1f}G",
    "tooltip": false
  },

  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-muted": "Û∞ñÅ",
    "on-click": "pavucontrol",
    "format-icons": {
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    }
  },
  "pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": "Ó∞ú {volume}%",
    "format-source-muted": "Û∞ç≠",
    "on-click": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
    "tooltip-format": "{source_desc}",
    "scroll-step": 5
  },
  "custom/caps-lock": {
    "format": "{}",
    "interval": 1,
    "exec": "~/.config/waybar/scripts/caps-lock.sh",
    "return-type": "json"
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{percent}% {icon}",
    "tooltip-format": "Backlight",
    "format-icons": ["ÔÜÖ", "ÔÑë"]
  },
  "battery": {
    "format": "{icon}  {capacity}%",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
  },
    "custom/notification": {
    "tooltip": true,
    "format": "<span size='16pt'>{icon}</span>",
    "format-icons": {
      "notification": "Û±Ö´",
      "none": "Û∞Çú",
      "dnd-notification": "Û∞Ç†",
      "dnd-none": "Û∞™ì",
      "inhibited-notification": "Û∞Çõ",
      "inhibited-none": "Û∞™ë",
      "dnd-inhibited-notification": "Û∞Çõ",
      "dnd-inhibited-none": "Û∞™ë"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },

  "tray": {
    "spacing": 6
  },
  "custom/power": {
    "format": "‚èª",
    "tooltip-format": "Power menu",
    "on-click": "wlogout"
  }
}
